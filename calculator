<head>
    <title>Color Calculator</title>

    <style>
        body {
            background: linear-gradient(to right, #4facfe, #00f2fe);
            font-family: Arial;
            text-align: center;
            padding-top: 50px;
        }

        .box {
            background: pink;
            padding: 25px;
            border-radius: 12px;
            width: 300px;
            margin: auto;
            box-shadow: 0 5px 15px rgba(0,0,0,0.3);
        }

        input {
            width: 90%;
            padding: 10px;
            margin: 10px;
        }

        button {
            padding: 10px;
            margin: 5px;
            border: none;
            border-radius: 6px;
            color: white;
            font-weight: bold;
            cursor: pointer;
        }

        .add { background: green; }
        .sub { background: orange; }
        .mul { background: blue; }
        .div { background: red; }

        #result {
            margin-top: 15px;
            font-size: 20px;
        }
    </style>
</head>

<body>

<div class="box">
    <h2>Calculator</h2>

    <input type="number" id="num1" placeholder="First number"><br>
    <input type="number" id="num2" placeholder="Second number"><br>

    <button class="add" onclick="calc('+')">Add</button>
    <button class="sub" onclick="calc('-')">Subtract</button>
    <button class="mul" onclick="calc('*')">Multiply</button>
    <button class="div" onclick="calc('/')">Divide</button>

    <h3 id="result">Result:</h3>
</div>

<script>
function calc(op) {
    let a = document.getElementById("num1").value;
    let b = document.getElementById("num2").value;

    if(a === "" || b === "") {
        document.getElementById("result").innerText = "Enter numbers!";
        return;
    }

    a = Number(a);
    b = Number(b);
    let res;

    if(op === '+') res = a + b;
    if(op === '-') res = a - b;
    if(op === '*') res = a * b;
    if(op === '/') {
        if(b === 0) {
            document.getElementById("result").innerText = "Cannot divide by 0";
            return;
        }
        res = a / b;
    }

    document.getElementById("result").innerText = "Result: " + res;
}
</script>

</body>
